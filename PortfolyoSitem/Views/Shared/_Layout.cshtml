<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PortfolyoSitem</title>

    <!-- CSS Bağlantıları -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PortfolyoSitem.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Özel Navbar Stili -->
    <style>
        .custom-navbar {
            background-color: #eaf3fa;
            padding: 20px 0;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        }

            .custom-navbar .nav-link {
                color: #333;
                font-weight: 600;
                font-size: 16px;
                margin-left: 20px;
                transition: color 0.3s;
            }

                .custom-navbar .nav-link:hover {
                    color: #ec7a6e;
                }

            .custom-navbar .navbar-brand {
                font-size: 20px;
                color: #2c2c2c;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg custom-navbar">
            <div class="container">
                <a class="navbar-brand" href="/">Kübra Durak</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contact">İletişim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Skills">Yetenekler</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; 2025 - PortfolyoSitem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JS Bağlantıları -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
