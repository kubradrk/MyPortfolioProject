@model List<PortfolyoSitem.Models.Testimonial>

<section style="max-width: 900px; margin: 60px auto; padding: 20px;">
    <h2 style="text-align:center; font-weight:bold; margin-bottom:30px;">Referanslar</h2>

    @foreach (var item in Model)
    {
        <div style="background: #fff; border-radius: 12px; box-shadow: 0 0 15px rgba(0,0,0,0.05); padding: 20px; margin-bottom: 30px;">
            <div style="display: flex; align-items: center;">
                <img src="@item.ImageUrl" alt="profil" style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover; margin-right: 15px;" />
                <div>
                    <strong>@item.Name</strong><br />
                    <span style="color: #666;">@item.Company</span>
                </div>
            </div>
            <p style="margin-top: 15px; font-style: italic; color: #444;">"@item.Comment"</p>
        </div>
    }
</section>
